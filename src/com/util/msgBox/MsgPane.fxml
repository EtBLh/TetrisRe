<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root styleClass="background" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.121"
         xmlns:fx="http://javafx.com/fxml/1">

    <stylesheets>
        <URL value="@MsgPane.css"/>
    </stylesheets>

    <VBox styleClass="background" alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <AnchorPane fx:id="msgTitlePane" minHeight="300.0"
                        style="-fx-border-color: #20B2AA; -fx-border-width: 0 0 0 10; -fx-background-color: #eeeeee;">
                    <Text fx:id="msgTitle" fill="#505050" layoutX="20.0" layoutY="100.0" text="Enter Your Name Here"/>
                    <TextField fx:id="input" layoutX="20.0" layoutY="150.0" prefHeight="60.0" prefWidth="750.0"/>
                    <Button fx:id="msgCloseButton" layoutY="300.0" mnemonicParsing="false"
                            onMouseClicked="#msgCloseButtonClicked" prefHeight="50.0" prefWidth="150.0" text="OK"
                            AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="10.0"/>
            </AnchorPane>
    </VBox>
</fx:root>
